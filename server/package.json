  },
  "homepage": "https://github.com/dayrich96/Destination-Review-Backend#readme",
  "dependencies": {
    "@faker-js/faker": "^9.8.0",
    "@prisma/client": "^6.8.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "dotenv-flow": "^4.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prisma": "^6.8.2",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.js?(x)",
      "**/?(*.)+(spec|test).js?(x)",
